
public class CoreJava {

	public static void main(String[] args) {
		
		// Data types		
		int myNum = 5;
		char letter = 'r';
		double dec = 5.98;
		float pi = 3/2;
		boolean myCard = true;
		String website = "Web Academy";
		
		System.out.println(dec + " is the value of the dec variable");
		System.out.println(website);
		
		// Arrays 
		// - indexes start from 0
		// - no way to change the number of elements in the array 
		int[] my_array = new int[5]; // one way to create an array
		my_array[0] = 1; // add element to array
		
		int[] my_array2 = {1, 2, 4, 7, 8}; // another way to create an array
		System.out.println(my_array2[3]); // get the value of the array element
		
		// for loop
		for (int i = 0; i < my_array2.length; i++) 
		{
			System.out.println(my_array2[i]);
		}		
		
		// The short form of the "for loop"
		String[] my_names = {"Alex", "Olen", "Max"};
		for (String name: my_names) 
		{
			System.out.println(name);
		}

	}

}
